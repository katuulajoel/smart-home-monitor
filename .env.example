# Database Configuration (for development)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=energy_monitor

# Service Ports
AUTH_SERVICE_PORT=3001
TELEMETRY_SERVICE_PORT=3002
CHAT_SERVICE_PORT=3003
FRONTEND_PORT=3000

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_key
JWT_EXPIRES_IN=1d

# External Services
OPENAI_API_KEY=your_openai_api_key

# Docker Configuration
# Set this to your container registry (e.g., 'docker.io/yourusername' or '123456789012.dkr.ecr.region.amazonaws.com')
DOCKER_REGISTRY=your-registry
# Set this to the image tag you want to use (e.g., '1.0.0', 'production', 'latest')
TAG=latest

# Production URLs (for frontend)
# Uncomment and set these in production
# PROD_API_URL=https://api.yourdomain.com
# PROD_CHAT_API_URL=https://api.yourdomain.com/chat
# PROD_TELEMETRY_SERVICE_URL=https://api.yourdomain.com/telemetry

