{
  "name": "chat-service",
  "version": "1.0.0",
  "description": "Chat service for the Smart Home Energy Monitor",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "test": "cross-env TS_NODE_PROJECT=\"tsconfig.spec.json\" jest",
    "test:watch": "cross-env TS_NODE_PROJECT=\"tsconfig.spec.json\" jest --watch",
    "test:ci": "cross-env TS_NODE_PROJECT=\"tsconfig.spec.json\" jest --ci --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate": "npx knex --knexfile dist/knexfile.js migrate:latest",
    "migrate:dev": "npx knex --knexfile src/knexfile.ts migrate:latest",
    "migrate:make": "npx knex --knexfile dist/knexfile.js migrate:make",
    "migrate:make:dev": "npx knex --knexfile src/knexfile.ts migrate:make",
    "migrate:rollback": "npx knex --knexfile dist/knexfile.js migrate:rollback",
    "migrate:rollback:dev": "npx knex --knexfile src/knexfile.ts migrate:rollback",
    "seed": "npx knex --knexfile dist/knexfile.js seed:run",
    "seed:dev": "npx knex --knexfile src/knexfile.ts seed:run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@smart-home/shared": "file:../shared",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.5.1",
    "morgan": "^1.10.0",
    "objection": "^3.1.0",
    "openai": "^4.0.0",
    "pg": "^8.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-validator": "^2.20.33",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.4",
    "prettier": "^3.0.0",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
